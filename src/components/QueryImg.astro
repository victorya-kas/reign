---
import type { ImageMetadata } from "astro";
import {Image } from "astro:assets";

interface Props {
    mobileImg:ImageMetadata;
    desktopImg:ImageMetadata;
    alt: string;
    className?:string;
    [x:string]: any;
}

const { mobileImg, desktopImg, alt, className, ...rest } = Astro.props;

---

<picture class={`block ${className ?? ""}`} {...rest}>
    <source media="(max-width: 799px)" srcset={mobileImg.src}/>
    <source media="(min-width: 800px)" srcset={desktopImg.src}/>
    <Image src={desktopImg} alt={alt}/>
</picture>