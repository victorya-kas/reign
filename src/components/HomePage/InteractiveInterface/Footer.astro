---
import Button from "@ui/Button/Button.astro";
import Image from "@/components/Image.astro";
import type { FollowerID } from "@ts/types";
import Follower from "@components/Cards/Follower/Follower.astro";

const followers: FollowerID[] = ["2603", "2802", "2501", "2015", "2403"];
---
<style is:global>
  [followers-hand] [follower-card-coin] {
    position: sticky;
    left: -3px;
    bottom: 0
  }
</style>

<div
  class="h-[15%] min-h-[56px] max-h-[112px] flex justify-between items-start gap-[60px] desktop-sm:gap-[120px] shrink-0 desktop-md:[30px] px-[10px] desktop-md:px-[20px]"
>
  <div class="shrink-0 h-full" tooltip-id="btn-ability-intelligence">
    <Button variant="gold-bordered" size="lg">
      <span
        class="block w-[28px] h-[28px] desktop-md:w-[55px] desktop-md:h-[55px]"
      >
        <Image name="icon-ability-intelligence" width="55" height="55" />
      </span>
    </Button>
  </div>
  <div
    class="flex justify-center items-start min-w-[375px] max-w-[750px] gap-[2px] h-full overflow-hidden px-[8px] shrink-0"
    tooltip-id="followers-hand"
    followers-hand
  >
    {followers?.map((id: FollowerID) => <Follower id={id} />)}
  </div>
  <div class="shrink-0 h-full" tooltip-id="btn-resourses">
    <Button variant="gold-bordered" size="lg">
      <span
        class="block w-[28px] h-[28px] desktop-md:w-[55px] desktop-md:h-[55px]"
      >
        <Image name="icon-resourses" width="55" height="55" />
      </span>
    </Button>
  </div>
</div>
