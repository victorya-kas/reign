---
import Button from "ui/Button.astro";
import Hero from "@components/Cards/Hero.astro";
import Image from "@assets/Image.astro";
import type { heroID } from "@ts/types";

const heroes: heroID[] = [
  "1101",
  "1201",
  "1301",
  "1401",
  "1501",
  "1601",
  "1701",
  "1801",
];
---

<div
  class="h-[12%] min-h-[45px] max-h-[90px] flex justify-between items-center shrink-0"
>
  <div class="relative shrink-0 h-full" tooltip-id="btn-timer">
    <Button variant="trapezoid-right" size="lg"
      >30</Button
    >
    <span class="absolute right-0 top-0" tooltip-id="btn-sm-timer">
      <Button variant="silver-bordered" size="sm">90</Button>
    </span>
  </div>
  <div
    class="relative h-full flex items-center justify-center p-[0_25px_0_32px] desktop-md:p-[0_2vw_0_2.5vw]"
    tooltip-id="header-heroes"
  >
    {
      heroes?.map((id: heroID) => (
        <Hero
          id={id}
          mode="horizontal"
          orderFlag={id === "1301" ? "empty" : id === "1701" ? "real" : null}
        />
      ))
    }
  </div>
  <div class="shrink-0 h-full" tooltip-id="btn-settings">
    <Button variant="trapezoid-left" size="lg">
      <Image
        name="icon-settings"
        className="w-[22px] h-[22px] desktop-sm:w-[33px] desktop-sm:h-[33px] desktop-md:w-[44px] desktop-md:h-[44px]"
      />
    </Button>
  </div>
</div>
