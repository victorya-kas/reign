    <Button variant="corner-right" size="sm" slot="table-item-power" tooltip-id="victory-points">12</Button>
    <div slot="table-item-followers-row">
      <Follower showTooltip={true} id="2605" type="rounded"/>
      <Follower showTooltip={true} id="2012" type="rounded"/>
    </div>
    <div slot="table-item-followers-row">
      <Follower showTooltip={true} id="2606" type="rounded"/>
    </div>
  </TableItem>
  <TableItem>
    <PlayerName name="Doyle" slot="table-item-player-name" />
