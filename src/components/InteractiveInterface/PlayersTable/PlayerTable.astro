---
import Hero from "@components/Cards/Hero.astro";
import Statictics from "./Statistics/Statistics.astro";
import PlayerName from "./PlayerName.astro";
import TableItem from "./TableItem.astro";
import Follower from "@components/Cards/Follower/Follower.astro";
import Button from "@ui/Button.astro";
