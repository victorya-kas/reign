---
import { images, type Images } from './images';

interface Props {
  name?: string;
  url?: string | undefined
  width?: string | undefined;
  height?: string | undefined;
  className?: string;
}

const {
  name,
  url,
  width,
  height,
  className
} = Astro.props as Props;

const style = {
  ...(width && {width}),
  ...(height && {height}),
}
const imgSrc = url ?? images[name as keyof Images] ?? '';
---

<figure
  class={`${className ? className : ""}`} style={Object.keys(style)?.length > 0 ? style : {}}
>
  <img
    class='w-full h-full object-contain'
    src={imgSrc}
    alt={`reign ${name ?? ''}`}
  />
</figure>
